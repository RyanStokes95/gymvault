<div class="row justify-content-center">
  <div class="col-md-4">
    <h1 class="h3 mb-3 fw-bold text-center">Sign in</h1>

    <div class="card shadow-sm p-4">
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |form| %>

        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <%= form.submit "Login", class: "btn btn-primary w-100" %>

      <% end %>
    </div>

    <div class="text-center mt-3">
      <%= link_to "Create an account", new_user_registration_path %>
    </div>
  </div>
</div>

